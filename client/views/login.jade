block title
    title Front End
block content
    nav.navbar.navbar-inverse
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbarCollapse")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#/"): img#smalllogo(src="img/uber.png")
            .collapse.navbar-collapse#navbarCollapse
                ul.nav.navbar-nav
                    li: a(href="#/register") Register
                    li: a(href="#/login") Login
    .container(ng-controller="loginController")
        .row
            .col-md-8.col-md-offset-2
                .jumbotron
                    h1 Log In.
                    form#loginForm(name="loginForm" novalidate)
                        .form-group(ng-class="{'has-error': loginForm.email.$invalid && loginForm.email.$touched}")
                            input#email.form-control.input-lg(type="email" placeholder="Email" ng-model="info.email" name="email" required)
                        .form-group(ng-class="{'has-error': loginForm.password.$invalid && loginForm.password.$touched}")
                            input#password.form-control.input-lg(type="password" placeholder="Password" ng-model="info.password" name="password" required)
                        .form-group
                            button.btn.btn-primary.btn-lg(type="button" ng-disabled="loginForm.$invalid" ng-click="login()") Log In!
